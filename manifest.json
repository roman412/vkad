{
  "name": "VK Audio Duration",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Выводит информацию о суммарном времени воспроизведения музыки, прикреплённой к посту.",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon-19.png",
      "38": "img/icon-38.png"
    },
    "default_title": "VK Audio Duration"
  },
  "content_scripts": [
    {
      "js": [ "js/main.js" ],
      "all_frames": true,
      "matches": [ "https://vk.com/*", "https://m.vk.com/*" ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "author": "jrm"
}
